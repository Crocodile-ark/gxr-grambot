modules = ["python-3.12"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run Bot"

[[workflows.workflow]]
name = "Run Bot"
author = 44591584
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Stop Bot"
author = 44591584
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python stop_bot.py"

[[workflows.workflow]]
name = "Restart Bot"
author = 44591584
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python stop_bot.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
